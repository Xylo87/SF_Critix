<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}CritX{% endblock %}</title>
        {% block stylesheets %}
            {# > MyCSS #}
            <link rel="stylesheet" href="{{ asset('styles/style.css')}}">

            {# <link rel="stylesheet" href="{{ asset('styles/app.css')}}"> #}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <nav>
                <div id="flashMessages">
                    {# > Add/Edit Piece #}
                    {% for message in app.flashes('piAddEditSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Add/Edit Critic #}
                    {% for message in app.flashes('crAddEditSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Add/Edit Influencer #}
                    {% for message in app.flashes('inAddEditSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Search Influencer fail #}
                    {% for message in app.flashes('inSearchFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Search Category fail #}
                    {% for message in app.flashes('caSearchFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Search Critics fail #}
                    {% for message in app.flashes('crSearchFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Search Piece fail #}
                    {% for message in app.flashes('piSearchFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}
                </div>
            </nav>
        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            {# > My JavaScript #}
            <script src="{{ asset('script.js') }}"></script>

            {# {% block importmap %}{{ importmap('app') }}{% endblock %} #}
        {% endblock %}
    </body>
</html>
