{% extends 'base.html.twig' %}

{% block stylesheets %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% endblock %}

{% block title %}{{category}}{% endblock %}

{% block body %}
    <ul>
        <li><a href="{{ path('new_piece')}}">Add a Piece</a></li>
    </ul>

    <h1>All {{category}} critics</h1>
    <hr>
    <ul>
        {% for piece in category.pieces %}
            <li>
                <h2><a href="{{ path('show_piece', {'id': piece.id})}}">{{piece}}</a></h2>
                <p><u>Release date</u> : {{piece.releaseDateENG}}</p>
                <p><u>Maker</u> : {{piece.maker}}</p>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
