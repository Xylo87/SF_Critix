<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}CritX{% endblock %}</title>
        {% block stylesheets %}
            {# > MyCSS #}
            <link rel="stylesheet" href="{{ asset('styles/app.css')}}">
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <nav>
                <div id="flashMessages">
                    {# > Add/Edit Piece #}
                    {% for message in app.flashes('piAddEditSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Add/Edit Critic #}
                    {% for message in app.flashes('crAddEditSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Add/Edit Influencer #}
                    {% for message in app.flashes('inAddEditSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}
                </div>
            </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
        </div>
    </body>
</html>
