{% extends 'base.html.twig' %}

{% block title %}Critix > {{piece.category}} > Infos > {{piece}}{% endblock %}

{% block body %}

<div>
    <i>#{{piece.category}} > Infos</i>
    <h2>Infos on →</h2>
    <h1>{{piece}}</h1>

    {% for video in piece.videos %}
        <iframe width="560" height="315" src="{{video.link}}" 
        title="YouTube video player" 
        frameborder="0" 
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
        referrerpolicy="strict-origin-when-cross-origin" 
        allowfullscreen></iframe>
    {% endfor %}
    
    <img src="/uploads/images/{{piece.poster}}" alt="{{piece}}" style="width: 265px; height: 360px; object-fit: cover">

    {# > Edit and suppression (modal) #}
    <a href="{{ path('edit_piece', {'id': piece.id})}}"><button>Edit</button></a>
    {# <a href="{{ path('delete_influencer', {'id': influencer.id})}}">Delete</a></h2><br> #}
    <button class="deleteConfirm">Delete</button><br>
        <dialog class="openModal">
            <h3>Are you sure you want to delete "{{piece}}" ?</h3>
            <a href="{{ path('delete_piece', {'id': piece.id})}}"><button>Yes</button></a>
            <button class="closeModal">No</button>
        </dialog>

    <p><u>Maker</u> : {{piece.maker}}</p>

    {% if piece.isUpcoming %}
        <p><u>Release date</u> : {{piece.releaseDateENG|date("Y") }} (Upcoming)</p>
    {% else %}
        <p><u>Release date</u> : {{piece.releaseDateENG}}</p>
    {% endif %}
    
    <p><u>About</u> : {{piece.about}}</p><br>

    <form action="">
        <fieldset class="user-score">
            <legend>Your score</legend>
            {# <label class="fa-regular fa-star emptystars" for="rating1"></label>
                <input type="radio" name="rating" id="rating1" value="0"> #}
            <label class="fa-solid fa-star-half-stroke halfstars" for="rating2"></label>
                <input type="radio" name="rating" id="rating2" value="0.5">
            <label class="fa-regular fa-star emptystars" for="rating3"></label>
                <input type="radio" name="rating" id="rating3" value="1">
            <label class="fa-solid fa-star-half-stroke halfstars" for="rating4"></label>
                <input type="radio" name="rating" id="rating4" value="1.5">
            <label class="fa-regular fa-star emptystars" for="rating5"></label>
                <input type="radio" name="rating" id="rating5" value="2">
            <label class="fa-solid fa-star-half-stroke halfstars" for="rating6"></label>
                <input type="radio" name="rating" id="rating6" value="2.5">
            <label class="fa-regular fa-star emptystars" for="rating7"></label>
                <input type="radio" name="rating" id="rating7" value="3">
            <label class="fa-solid fa-star-half-stroke halfstars" for="rating8"></label>
                <input type="radio" name="rating" id="rating8" value="3.5">
            <label class="fa-regular fa-star emptystars" for="rating9"></label>
                <input type="radio" name="rating" id="rating9" value="4">
            <label class="fa-solid fa-star-half-stroke halfstars" for="rating10"></label>
                <input type="radio" name="rating" id="rating10" value="4.5">
            <label class="fa-regular fa-star emptystars" for="rating11"></label>
                <input type="radio" name="rating" id="rating11" value="5">
        </fieldset>
    </form><br>

    {% if piece.critics|length > 0 %}
            <p><u>Critic score</u> : {{ piece.criticTotalScore }}/10</p>
    {% endif %}

    {# {% for image in piece.images %}
        {{image}}
    {% endfor %} #}

    <h2>Go to critics <br>
    → <a href="{{ path('show_critics', {'id': piece.id})}}">{{piece}}</a></h2><br>
    <a href="{{path('show_category', {'id': piece.category.id})}}"><i>> View all {{piece.category}} critics</i></a>
</div>
   
{% endblock %}
            

            

            
            