{% extends 'base.html.twig' %}

{% block title %}CritX > Login{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div>
                <small>You are already logged in as "{{ app.user }}"</small><br> 
                âž” <a href="{{ path('app_logout') }}">Logout</a><br><br>
            </div>
        {% endif %}

        <h1>Please sign in</h1><br>
        <label for="username">Email :</label>
        <input type="email" name="_username" id="username" autocomplete="email" size="30" required autofocus><br>
        <label for="password">Password :</label>
        <input type="password" name="_password" id="password" autocomplete="current-password" size="30" required><br><br>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
        #}

        <button type="submit">
            Sign in
        </button>
    </form>
{% endblock %}
