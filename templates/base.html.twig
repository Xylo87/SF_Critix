<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}CritX{% endblock %}</title>
        {% block stylesheets %}
            {# > Favicon #}
            <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('favicon/apple-touch-icon.png')}}">
            <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('favicon/favicon-32x32.png')}}">
            <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('favicon/favicon-16x16.png')}}">
            <link rel="manifest" href="{{ asset('favicon/site.webmanifest')}}">
            {# > Font Awesome #}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" 
            integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" 
            crossorigin="anonymous" 
            referrerpolicy="no-referrer" />
            {# > MyCSS #}
            <link rel="stylesheet" href="{{ asset('styles/style.css')}}">

            {# <link rel="stylesheet" href="{{ asset('styles/app.css')}}"> #}
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <nav>
                <div id="flashMessages">
                    {# > Add/Edit Piece #}
                    {% for message in app.flashes('piAddEditSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Delete Piece #}
                    {% for message in app.flashes('piDeleteSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Add/Edit Critic #}
                    {% for message in app.flashes('crAddEditSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Delete Critic #}
                    {% for message in app.flashes('crDeleteSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Add/Edit Influencer #}
                    {% for message in app.flashes('inAddEditSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Delete Influencer #}
                    {% for message in app.flashes('inDeleteSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Search Influencer fail #}
                    {% for message in app.flashes('inSearchFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Search Category fail #}
                    {% for message in app.flashes('caSearchFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Search Critics fail #}
                    {% for message in app.flashes('crSearchFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Search Piece fail #}
                    {% for message in app.flashes('piSearchFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Register success #}
                    {% for message in app.flashes('registerSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Email verify success #}
                    {% for message in app.flashes('verifySuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Search User fail #}
                    {% for message in app.flashes('usSearchFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > User profile update success #}
                    {% for message in app.flashes('usEditSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > User profile update fail #}
                    {% for message in app.flashes('usEditFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > User profile delete success #}
                    {% for message in app.flashes('usDeleteSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > User profile delete fail #}
                    {% for message in app.flashes('usDeleteFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Critic save success #}
                    {% for message in app.flashes('crSaveSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Critic save fail #}
                    {% for message in app.flashes('crSaveFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Critic unsave success #}
                    {% for message in app.flashes('crUnSaveSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Critic unsave fail #}
                    {% for message in app.flashes('crUnSaveFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Influencer like success #}
                    {% for message in app.flashes('inLikeSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Influencer like fail #}
                    {% for message in app.flashes('inLikeFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Influencer unlike success #}
                    {% for message in app.flashes('inUnLikeSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > Influencer unlike fail #}
                    {% for message in app.flashes('inUnLikeFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > User score vote success #}
                    {% for message in app.flashes('scPieceSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > User score vote fail #}
                    {% for message in app.flashes('scPieceFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > User score reset fail #}
                    {% for message in app.flashes('scResetFail') %}
                        <div class="alert alert-danger">
                            {{message}}
                        </div>
                    {% endfor %}

                    {# > User score reset success #}
                    {% for message in app.flashes('scResetSuccess') %}
                        <div class="alert alert-success">
                            {{message}}
                        </div>
                    {% endfor %}

                </div>
            </nav>
        {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
        
            {# > My JavaScript #}
            <script src="{{ asset('script.js') }}"></script>
            
            {# {% block importmap %}{{ importmap('app') }}{% endblock %} #}
        {% endblock %}
    </body>
</html>
